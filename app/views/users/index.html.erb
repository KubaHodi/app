<% if alert.present? %>
    <p class="alert"><%=alert%></p>
<%end%>

<% content_for :title, "Users" %>

<h1 class="text-center" >Users</h1>

<table class="table table-striped table-dark table-hover">
<thead class="thead-dark">
  <tr> <th>#</th> <th>Name</th> <th>Actions</th> </tr>
</thead>

  <% @users.each do |user| %>
    <tbody>
    <tr>
      <td><%=user.id%></td>
      <td><%=user.name%></td>
      <td>
        <%= link_to "Edit", edit_user_path(user), method: :get, class: "btn btn-outline-info"%>
        <%= link_to "Delete", user, class: "btn btn-outline-danger", data: { turbo_method: :delete,
            turbo_confirm: "Are you sure?" }%>  
      </td>
    </tr>
   
      
    
    </tbody>
  <% end %>
</table>
<%= link_to "New user", new_user_path, class: "btn btn-success" %>
