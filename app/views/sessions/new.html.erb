<div>
<% if notice.present? %>
    <p><%=notice%></p>
<%end%>

<%= form_tag do %>
    <h2>Please Log In</h2>
    <%= label_tag :name, "Name:" %>
    <%= text_field_tag :name, params[:name], style: "display-block"%>

    <%= label_tag :password, "Password"%>
    <%= password_field_tag :password, params[:password], style: "display-block" %>
        
    <%=submit_tag "Login", class: "btn btn-success"%>
<%end%>

</div>