<p style="color: green"><%= notice %></p>

<% content_for :title, "Categories" %>

<h1 class="text-center">Categories Editor</h1>
  <table class="table table-striped table-dark table-hover">
  <thead class="thead-dark">
  <tr> <th>#</th> <th>Name</th> <th>Actions</th> </tr>
  </thead>
  <% @categories.each do |category| %>
  <tbody>
    <tr>
      <td><%= category.id %></td>
      <td><%= category.name %></td>
      <td>
      <%= link_to "Edit", edit_category_path(category), method: :get, class: "btn btn-outline-info" %>
      <%= link_to "Delete", category, class: "btn btn-outline-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
      </td>
    </tr>
    <tbody>
  <% end %>
</table>
<%= link_to "New category", new_category_path, class: "btn btn-success" %>
