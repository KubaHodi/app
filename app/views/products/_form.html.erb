
<%= form_with(model: product ) do |form|%>
  <% if product.errors.any? %>
    <div class="bg-danger border border-danger" style="--bs-bg-opacity: .3;">
      <h2 class="text-danger"><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li class="text-danger"><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="container-fluid text-center fs-2">
  <div>
    <%= form.label :name, style: "display: block", class: "form-label"  %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block", class: "form-label" %>
    <%= form.textarea :description %>
  </div>

  <div>
    <%= form.label "Obraz", style: "display: block", class: "form-label" %>
    <%= form.file_field :cover_image %>
  </div>

  <div>
    <%= form.label :brand, style: "display: block", class: "form-label" %>
    <%= form.text_field :brand %>
  </div>

  <div>
    <%= form.label :price, style: "display: block", class: "form-label" %>
    <%= form.text_field :price %>
  </div>

  <div>
    <%= form.label :category, style: "display: block", class: "form-label" %>
    <%= form.select :category_id, options_for_select(@categories.collect { |cat| [cat.name, cat.id] }) %>
  </div>

  <div>
    <%= form.label :genre, style: "display: block", class: "form-label" %>
    <%= form.select :genre_id, options_for_select(@genres.collect { |g| [g.name, g.id] })%>
  </div>
  <div> 
    <%= form.submit class: "btn btn-success"%>
  </div>

  <div>
  <%= link_to "Back to products", products_path, class: "btn btn-dark" %>
  </div>

</div>
<% end %>
