<p style="color: green"><%= notice %></p>

<% content_for :title, "Products" %>

<h1 class="text-center">Products Editor</h1>

<table class="table table-striped table-dark table-hover">
 
  <thead class="thead-dark">
  <tr> <th>#</th> <th>Name</th> <th>Description</th> <th>Brand</th> <th>Price</th> <th>Image</th> <th>Category</th> <th>Genre</th> <th>Actions</th> </tr>
  </thead>
   <% @products.each do |product| %>
  <tbody>
  <tr> 
    <td><%=product.id%></td> 
    <td><%=product.name%></td> 
    <td><%= truncate(product.description)%></td> 
    <td><%=product.brand%></td> 
    <td><%=number_to_currency(product.price, unit: "zÅ‚")%></td> 
    <td><%= image_tag(product.image_url, class: "img-fluid")  %></td>
    <td><%=product.category.name%></td>
    <td><%= product.genre.name%></td>
    <td>
    <%=link_to "Edit", edit_product_path(product), :method => :get, class: "btn btn-outline-info"%>
    <%=link_to "Delete", product, class: "btn btn-outline-danger", data: { turbo_method: :delete,
            turbo_confirm: "Are you sure?" }%>       
    </td>
    
  </tr>
  </tbody>
  <% end %>
</table>
<div class="container-fluid text-center fs-2">
<%= link_to "New product", new_product_path, class: "btn btn-success btn-lg" %>
</div>