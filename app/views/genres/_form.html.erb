  <% end %>
<div class="container-fluid text-center fs-2">
  <div>
    <%= form.label :name, style: "display: block", class: "form-label" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.submit class: "btn btn-success" %>
  </div>
  <div>
    <%=link_to "Back to genres", genres_path, class: "btn btn-dark" %>
  </div>
</div>
<% end %>
