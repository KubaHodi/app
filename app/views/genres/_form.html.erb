<%= form_with(model: genre) do |form| %>
  <% if genre.errors.any? %>
    <div class="bg-danger border border-danger" style="--bs-bg-opacity: .3;">
      <h2 class="text-danger"><%= pluralize(genre.errors.count, "error") %> prohibited this genre from being saved:</h2>

      <ul>
        <% genre.errors.each do |error| %>
          <li class="text-danger"><%= error.full_message %></li>
        <% end %>
      </ul>
